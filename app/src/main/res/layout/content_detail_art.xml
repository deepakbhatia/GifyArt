<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_detail_art"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/each_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        >

    <ImageButton
        android:id="@+id/selector"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/nested_image_margin"
        android:src="@drawable/ic_action_done"
        android:visibility="invisible"
        android:background="@drawable/round_selector"/>
        <TextView
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/textSize"
            android:typeface="monospace"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:text="KJADKHKFHKAHKA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/avail_image"
        android:layout_below="@+id/title"
        android:src="@drawable/rain68"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/description"
        android:layout_below="@id/avail_image"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
